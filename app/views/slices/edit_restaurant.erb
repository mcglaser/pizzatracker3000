<h1> Edit Pizzeria Information</h1>
<br>


<% if flash.has?(:message) %>
  <%= flash[:message] %>
  <br>
  <br>
<% end %>

<form method="post" action="/slices/<%=@restaurant.id%>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<p>Pizzaria Name*: <input type="text" name="name" value="<%= @restaurant.name %>"></p>
<p>Pizzaria Address: <input type="text" name="address" value="<%= @restaurant.address %>"></p>
<p>Pizzaria City*: <input type="text" name="city" value="<%= @restaurant.city %>"></p>
<p>Pizzaria Rating*: <input type="text" name="rating" value="<%= @restaurant.rating %>"></p>
<br>
  <input type="submit" value="submit">
</form>

